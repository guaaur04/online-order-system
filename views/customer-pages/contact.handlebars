{{> customer-nav }}
<div class="container">
<h1 class="title center">Contact</h1>

<div>

    <h2> Call, e-mail, fill out this form.</h2>
    <h4>(248) 348-3333</h4>

</div>


{{!Contact Form}}
<div= class="row contact_form center">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s4">
                <input id="name" type="text" class="validate">
                <label for="name">Name</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s4">
                <input id="email" type="email" class="validate">
                <label for="email">Email</label>
            </div>
        </div>

        <div class="row">
            <div class="col s4">
                This is an inline input field:
                <div class="input-field inline">
                    <input id="message_inline" type="email" class="validate">
                    <label for="message_inline">Message</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
            </div>
        </div>

        {{!Submit}}
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>

    </form>
    </div>
</div>

    {{> customer-footer }}