{{> customer-nav }}

{{!Here's we add the menu category buttons via Materialize tabs}}
<div class="row">

  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s2"><a href="#test1">Pizza</a></li>
      <li class="tab col s2"><a class="active" href="#test2">Submarines</a></li>
      <li class="tab col s2"><a href="#test3">Salads</a></li>
      <li class="tab col s2"><a href="#test4">Wings</a></li>
      <li class="tab col s2"><a href="#test5">Stix</a></li>
      <li class="tab col s2"><a href="#test6">Extras</a></li>
    </ul>
  </div>

  <div id="test1" class="col s12">
    <h1>Pizza</h1>
  </div>

  <div id="test2" class="col s12">
    <h1>Submarines</h1>
  </div>

  <div id="test3" class="col s12">
    <h1>Salads</h1>
  </div>

  <div id="test4" class="col s12">
    <h1>Wings</h1>
  </div>

  <div id="test5" class="col s12">
    <h1>Stix</h1>
  </div>

  <div id="test6" class="col s12">
    <h1>Extras</h1>
  </div>


  {{!Cards}}

  <div class="row">
    {{#each this}}
    <div class="col s3 m4 menu-item-card card">
      <div class="card hoverable">
        <div class="card-image">

          {{!Based on user click events, the appropriate images should pass through this part of the menu-item-card}}
          <img src={{img}}>

          <span class="card-title">{{name}}</span>

          <a class="btn-floating halfway-fab waves-effect waves-light red"><i
              class="activator material-icons">expand_more</i></a>

        </div>

        <div class="card-content">
          <p>{{description}}</p>
          <p>{{price}}</p>
        </div>

        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Pick your players<i class="material-icons right">close</i></span>
          
        {{> menu-item-details }}

        </div>
      </div>
    </div>

    {{/each}}

  </div>