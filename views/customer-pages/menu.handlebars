    {{!Cards}}

    <div class="row menu-card-row">
      {{#each products}}

      <div class="col s3 m4 menu-item-card">
        <div class="card hoverable menu-card">
          <div class="card-image">

            {{!Based on user click events, the appropriate images should pass through this part of the menu-item-card}}
            <img src="/images/pizza-yum.jpeg">


            <a class="btn-floating halfway-fab waves-effect waves-light red"><i
                class="activator material-icons">expand_more</i></a>

          </div>

          <div class="card-content">
            <span class="card-title menu-card-title">{{name}}</span>

          </div>

          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>

            <h4>{{name}} Details</h4>
            <p>{{description}}</p>
            <div class="prices">
              {{#each Sizes}}
              <div>
                <p>{{name}}</p>
                <p>${{price}}</p>
              </div>
              {{/each}}
            </div>

          </div>
        </div>
      </div>

      {{/each}}

    </div>
    {{> customer-footer }}
</body>