<div class="row">
    <div class="col s6 back-button">
        <a href='/pizzacutter/dashboard/product' class="btn-floating btn-large waves-effect waves-light red"><i
                class="material-icons large">chevron_left</i></a>
    </div>

    <div class="col s6">
        <a class="btn-floating btn-large waves-effect waves-light green" id="save-button"><i
                class="material-icons large">save</i></a>
    </div>
</div>


<h1 class="dashboard-header">Create a New Product</h1>

<div class="divider"></div>
<div class="row input-form">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="icon_prefix2" class="materialize-textarea" id="product-name"></textarea>
                <label for="icon_prefix2">Product Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <textarea id="textarea2" class="materialize-textarea" id="product-desc" data-length="120"></textarea>
                <label for="textarea2">Description</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <!-- Switch -->
                <div class="switch">
                    <label>
                        Out of Stock
                        <input type="checkbox">
                        <span class="lever" id="in-stock"></span>
                        In Stock
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <i class="material-icons prefix">filter_list</i>
                <select multiple id="product-category">
                    {{#each categories}}
                    <option value={{id}}>{{name}}</option>
                    {{/each}}
                </select>
                <label>Select Category</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <i class="material-icons prefix">format_size</i>
                <select multiple id="product-size">
                    {{#each sizes}}
                    <option value="1">{{size}}</option>
                    {{/each}}
                </select>
                <label>Select Sizes</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <i class="material-icons prefix">attach_money</i>
                <textarea id="icon_prefix2" class="materialize-textarea" id="product-price"></textarea>
                <label for="icon_prefix2">Price</label>
            </div>
        </div>
        <ul class="collapsible">
            <li>
                <div class="collapsible-header"><i class="material-icons">filter_drama</i>Add a Photo</div>
                <div class="collapsible-body"><span>Enter Photo upload widget here</span></div>
            </li>
        </ul>
    </form>
</div>