<div class="row">
    <div class="col s6 back-button">
        <a href='/pizzacutter/dashboard/' class="btn-floating btn-large waves-effect waves-light red"><i
                class="material-icons large">chevron_left</i></a>
    </div>
    <div class="col s6">
        <a href='/pizzacutter' class="btn-floating btn-large waves-effect waves-light red" id="home-button"><i
                class="material-icons large">queue_play_next</i></a>
    </div>
</div>

<h1 class="dashboard-header">Menu Items and Products</h1>

<div class="divider"></div>
<div class="section">
    <div class="row">
        <div class="col s4">
            <form class="col s12">
                <div class="input-field col s12">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Search...</label>
                </div>
            </form>
        </div>
        <div class="col s4">
            <div class="input-field col s12">
                <select>
                    <option value="1">Pizza</option>
                    <option value="2">Stix</option>
                    <option value="3">Salads</option>
                    <option value="4">Submarines</option>
                    <option value="5">Pasta and Wings</option>
                    <option value="6">Sides and Extras</option>
                    <option value="7">Merchandise and Other</option>
                </select>
                <label>Select Category</label>
            </div>
        </div>
        <div class="col s4">
            <button class="btn waves-effect waves-light" id="new-product-btn" type="submit" name="action">
                <a href='/pizzacutter/dashboard/product-update'></a>Add New Item
                <i class="material-icons right">add</i>
            </button>
        </div>
    </div>
</div>
</div>
<div class="divider"></div>

<table class="highlight">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>In Stock</th>
            <th>Size</th>
            <th>Price</th>
            <th>Categories</th>
            <th>Image</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td> {{name}}</td>
            <td> {{description}}</td>
            <td> {{in_stock}}</td>
            <td> {{size}}</td>
            <td> {{price}}</td>
            <td> {{category}}</td>
            <td> {{secure_url}}</td>
            <td> <a class="waves-effect waves-light btn delete-button"><i class="material-icons" id="delete-btn"
                        data-id={{id}}>delete</i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>