<div class="row">
    <div class="col s6 back-button">
        <a href='/pizzacutter/dashboard/' class="btn-floating btn-large waves-effect waves-light red"><i
                class="material-icons large">chevron_left</i></a>
    </div>
    <div class="col s6">
        <a href='/pizzacutter' class="btn-floating btn-large waves-effect waves-light red" id="home-button"><i
                class="material-icons large">queue_play_next</i></a>
    </div>
</div>

<h1 class="dashboard-header">Menu Items and Products</h1>

<div class="divider"></div>
<div class="section">
    <div class="row">
        <div class="col s4">
            <form class="col s12 search-form">
                <div class="input-field col s12">
                    <input class="search-term"></input>
                    {{!-- <textarea id="textarea1" class="materialize-textarea search-term"></textarea> --}}
                    <label for="textarea1">Search...</label>
                </div>
            </form>
        </div>
        <div class="col s4">
            <div class="input-field col s12">
                <select multiple>
                    {{#each categories}}
                    <option value={{id}}>{{name}}</option>
                    {{/each}}
                </select>
                <label>Select Category</label>
            </div>
        </div>
        <div class="col s4">
            <a href='/pizzacutter/dashboard/product-new' class="waves-effect waves-light btn"><i
                    class="material-icons right">add</i>Add New Item</a>
        </div>
    </div>
</div>
</div>
<div class="divider"></div>

<table class="highlight">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>In Stock</th>
            <th>Categories</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody id="product-list">
        {{#each products}}
        <tr>
            <td> {{name}}</td>
            <td> {{description}}</td>
            <td> {{in_stock}}</td>
            {{!-- <td> {{size}}</td> --}}
            {{!-- <td> {{price}}</td> --}}
            <td> {{category}}</td>
            <td> {{secure_url}}</td>
            <td> <a class="waves-effect waves-light btn" id="edit-btn" data-id={{id}}><i
                        class="material-icons">create</i></a></td>
            <td> <a class="waves-effect waves-light btn delete-button" id="delete-btn"><i class="material-icons"
                        data-id={{id}}>delete</i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/edit-product.js"></script>